<consulo-plugin>
  <extensionPoints>
    <extensionPoint name="pushSupport"
					interface="consulo.ide.impl.idea.dvcs.push.PushSupport" area="PROJECT"/>
    <extensionPoint name="cherryPicker"
					interface="consulo.ide.impl.idea.dvcs.cherrypick.VcsCherryPicker" area="PROJECT"/>
    <extensionPoint name="vcsRepositoryCreator" interface="consulo.ide.impl.idea.dvcs.repo.VcsRepositoryCreator" area="PROJECT"/>
  </extensionPoints>

  <actions>
    <action id="Vcs.CherryPick" class="consulo.ide.impl.idea.dvcs.cherrypick.VcsCherryPickAction" icon="consulo.platform.base.PlatformIconGroup@dvcs.cherrypick"/>
    <action id="Vcs.Push" class="consulo.ide.impl.idea.dvcs.push.VcsPushAction" icon="consulo.platform.base.PlatformIconGroup@actions.commit" text="Push...">
      <keyboard-shortcut first-keystroke="control shift K" keymap="$default"/>
    </action>
    <group id="Dvcs.Log.ContextMenu">
      <separator/>
      <reference id="Vcs.CherryPick"/>
      <add-to-group group-id="Vcs.Log.ContextMenu"/>
    </group>

    <group id="Dvcs.Log.Toolbar">
      <reference id="Vcs.CherryPick"/>
      <add-to-group group-id="Vcs.Log.Toolbar"/>
    </group>
  </actions>

  <extensionPoints>
    <extensionPoint name="vcsStartupActivity" interface="consulo.ide.impl.idea.openapi.vcs.impl.VcsStartupActivity"/>
  </extensionPoints>

  <applicationListeners>
    <listener class="consulo.ide.impl.idea.openapi.vcs.impl.VcsInitialization$ShutDownProjectListener"
              topic="consulo.project.event.ProjectManagerListener"/>
  </applicationListeners>

  <extensions defaultExtensionNs="consulo">
    <applicationService serviceInterface="consulo.virtualFileSystem.event.AsyncVfsEventsPostProcessor"
                        serviceImplementation="consulo.ide.impl.idea.vfs.AsyncVfsEventsPostProcessorImpl"/>
    <vcsStartupActivity implementation="consulo.ide.impl.idea.openapi.vcs.roots.VcsRootScanner$DetectRootsStartupActivity"/>

    <vcsStartupActivity implementation="consulo.ide.impl.idea.openapi.vcs.impl.ProjectLevelVcsManagerImpl$ActivateVcsesStartupActivity"/>

    <projectService serviceInterface="consulo.ide.impl.idea.openapi.vcs.ProjectLevelVcsManager" serviceImplementation="consulo.ide.impl.idea.openapi.vcs.impl.ProjectLevelVcsManagerImpl"/>

    <projectService serviceImplementation="consulo.ide.impl.idea.openapi.vcs.roots.VcsRootScanner"/>

    <projectService serviceImplementation="consulo.ide.impl.idea.dvcs.repo.VcsRepositoryManager"/>
    <projectService serviceImplementation="consulo.ide.impl.idea.dvcs.push.PushSettings"/>
    <projectService serviceImplementation="consulo.ide.impl.idea.dvcs.cherrypick.VcsCherryPickManager"/>

    <projectService serviceImplementation="consulo.ide.impl.idea.openapi.vcs.impl.VcsInitialization"/>

    <postStartupActivity implementation="consulo.ide.impl.idea.openapi.vcs.impl.VcsInitialization$StartUpActivity"/>

    <projectService serviceInterface="consulo.ide.impl.idea.openapi.vcs.changes.ui.ChangesViewContentI" serviceImplementation="consulo.ide.impl.idea.openapi.vcs.changes.ui.ChangesViewContentManager"/>

    <vcsStartupActivity implementation="consulo.vcs.changes.ui.VcsToolWindowFactory$UpdateVcsStartupActivity"/>

    <vcsStartupActivity implementation="consulo.ide.impl.idea.dvcs.repo.VcsRepositoryManager$MyStartupActivity"/>

    <toolWindow id="Version Control"
                icon="consulo.platform.base.PlatformIconGroup@toolwindows.toolwindowchanges"
                anchor="bottom"
                canCloseContents="true"
                displayName="Version Control"
                factoryClass="consulo.vcs.changes.ui.VcsToolWindowFactory"/>
  </extensions>
</consulo-plugin>

