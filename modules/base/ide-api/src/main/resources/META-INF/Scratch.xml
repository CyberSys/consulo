<consulo-plugin>
  <extensionPoints>

    <extensionPoint name="scratch.creationHelper" beanClass="consulo.language.LanguageExtensionPoint">
      <with attribute="implementationClass" implements="consulo.ide.impl.idea.ide.scratch.ScratchFileCreationHelper"/>
    </extensionPoint>
  </extensionPoints>

  <extensions defaultExtensionNs="consulo">
    <nonProjectFileWritingAccessExtension implementation="consulo.ide.impl.idea.ide.scratch.ScratchFileServiceImpl$AccessExtension"/>
    <usageTypeProvider implementation="consulo.ide.impl.idea.ide.scratch.ScratchFileServiceImpl$UsageTypeExtension" order="last"/>
    <useScopeEnlarger implementation="consulo.ide.impl.idea.ide.scratch.ScratchFileServiceImpl$UseScopeExtension"/>
    <syntaxHighlighter factoryClass="consulo.ide.impl.idea.ide.scratch.ScratchFileServiceImpl$Highlighter" order="first"/>
    <lang.substitutor language="TEXT" implementationClass="consulo.ide.impl.idea.ide.scratch.ScratchFileServiceImpl$Substitutor" order="first"/>

  </extensions>
</consulo-plugin>