<consulo-plugin>
  <actions>
    <group id="XDebugger.AttachGroup">
      <action id="XDebugger.AttachToProcess" class="consulo.ide.impl.idea.xdebugger.impl.actions.AttachToProcessAction"/>
      <add-to-group group-id="RunMenu" anchor="before" relative-to-action="editRunConfigurations"/>
    </group>
  </actions>

  <extensionPoints>
    <extensionPoint name="xdebugger.settings" interface="consulo.execution.debug.setting.XDebuggerSettings"/>
    <extensionPoint name="xdebugger.breakpointType" interface="consulo.execution.debug.breakpoint.XBreakpointType"/>
    <extensionPoint name="xdebugger.lineBreakpointTypeResolver" beanClass="consulo.virtualFileSystem.extension.FileTypeExtensionPoint">
      <with attribute="implementationClass" implements="consulo.execution.debug.breakpoint.XLineBreakpointTypeResolver"/>
    </extensionPoint>
    <extensionPoint name="xdebugger.localAttachDebuggerProvider" interface="consulo.execution.debug.attach.XLocalAttachDebuggerProvider"/>
    <extensionPoint name="xdebugger.attachDebuggerProvider" interface="consulo.execution.debug.attach.XAttachDebuggerProvider"/>
    <extensionPoint name="xdebugger.attachHostProvider" interface="consulo.execution.debug.attach.XAttachHostProvider"/>
  </extensionPoints>

  <extensions defaultExtensionNs="consulo">
    <executor implementation="consulo.execution.debug.DefaultDebugExecutor" order="first,after run"/>

    <colorSettingsPage implementation="consulo.ide.impl.idea.xdebugger.impl.ui.DebuggerColorsPage"/>

    <copyPastePreProcessor implementation="consulo.ide.impl.idea.xdebugger.impl.ui.DebuggerCopyPastePreprocessor"/>
  </extensions>
</consulo-plugin>