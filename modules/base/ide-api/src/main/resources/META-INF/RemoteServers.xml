<consulo-plugin>
  <actions>
    <group id="RemoteServersViewToolbar">
      <action id="RemoteServers.RunServer" class="consulo.ide.impl.idea.remoteServer.impl.runtime.ui.tree.actions.RunServerAction"/>
      <action id="RemoteServers.DebugServer" class="consulo.ide.impl.idea.remoteServer.impl.runtime.ui.tree.actions.DebugServerAction"/>
      <action id="RemoteServers.StopServer" class="consulo.ide.impl.idea.remoteServer.impl.runtime.ui.tree.actions.StopServerAction"/>
      <action id="RemoteServers.EditServer" class="consulo.ide.impl.idea.remoteServer.impl.runtime.ui.tree.actions.EditConfigurationAction"/>
      <separator/>
      <action id="RemoteServers.DeployAll" class="consulo.ide.impl.idea.remoteServer.impl.runtime.ui.tree.actions.DeployAllAction"/>
    </group>
  </actions>

  <extensionPoints>
    <extensionPoint name="remoteServer.type" interface="consulo.ide.impl.idea.remoteServer.ServerType"/>
    <extensionPoint name="remoteServer.deploymentSource.type" interface="consulo.ide.impl.idea.remoteServer.configuration.deployment.DeploymentSourceType"/>
    <extensionPoint name="remoteServer.viewContributor" interface="consulo.ide.impl.idea.remoteServer.impl.runtime.ui.RemoteServersViewContributor"/>
  </extensionPoints>

  <extensions defaultExtensionNs="consulo">


    

    <toolWindow id="Application Servers" icon="consulo.platform.base.PlatformIconGroup@remoteservers.serverstoolwindow" factoryClass="consulo.ide.impl.remoteServer.ui.ServersToolWindowFactory" anchor="bottom" />

  </extensions>
</consulo-plugin>