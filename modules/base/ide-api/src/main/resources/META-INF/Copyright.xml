<consulo-plugin>
  <extensions defaultExtensionNs="consulo">
    <projectConfigurable displayName="Copyright"
                         parentId="editor"
                         dynamic="true"
                         instance="consulo.ide.impl.copyright.impl.ui.CopyrightProjectConfigurable"/>

    <checkinHandlerFactory implementation="consulo.ide.impl.copyright.impl.actions.UpdateCopyrightCheckinHandlerFactory"/>

    <projectService serviceImplementation="consulo.ide.impl.copyright.impl.actions.UpdateCopyrightCheckinHandlerState"/>

    <predefinedCopyright name="Apache 2" file="/copyright/Apache2.txt"/>
    <predefinedCopyright name="MIT" file="/copyright/MIT.txt"/>

    <projectService serviceImplementation="consulo.language.copyright.config.CopyrightManager"/>

    <projectService serviceInterface="consulo.language.copyright.internal.CopyrightGenerator" serviceImplementation="consulo.ide.impl.language.copyright.CopyrightGeneratorImpl"/>
  </extensions>

  <applicationListeners>
    <listener class="consulo.ide.impl.copyright.impl.CopyrightBulkFileListener" topic="consulo.virtualFileSystem.event.BulkFileListener"/>
  </applicationListeners>

  <extensionPoints>
    <extensionPoint name="copyright.updater" beanClass="consulo.virtualFileSystem.extension.FileTypeExtensionPoint">
      <with attribute="implementationClass" implements="consulo.language.copyright.UpdateCopyrightsProvider"/>
    </extensionPoint>
    <extensionPoint name="predefinedCopyright" beanClass="consulo.ide.impl.copyright.impl.PredefinedCopyrightTextEP"/>
  </extensionPoints>

  <actions>
    <action id="UpdateCopyright" class="consulo.ide.impl.copyright.impl.actions.UpdateCopyrightAction" text="Update Copyright..."
            description="Generate/Update the copyright notice.">
      <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
      <add-to-group group-id="CodeMenu" anchor="last"/>
      <add-to-group group-id="NavbarPopupMenu" anchor="last"/>
    </action>
    <action id="GenerateCopyright" class="consulo.ide.impl.copyright.impl.actions.GenerateCopyrightAction" text="Copyright"
            description="Generate/Update the copyright notice.">
      <add-to-group group-id="GenerateGroup" anchor="last"/>
    </action>
  </actions>
</consulo-plugin>
